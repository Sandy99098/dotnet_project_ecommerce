@* @model IEnumerable<dotnet_project_ecommerce.Models.Product> *@
@* @model dotnet_project_ecommerce.Models.Product *@

@* @{ *@
@*     ViewData["Title"] = "All  Products"; *@
@* } *@

<h1>All Products</h1>
<a class=" btn btn-primary" href=@Url.Action("AddProduct","Admin")> Add Product </a> 
<table class="table">
    <thead>
        <tr>
            @* <th> *@
            @* @Html.DisplayNameFor(model => model.product_id) *@
            @* </th> *@

            <th>   product_name</th>
            <th>  product_price</th>
            <th>   product_image</th>
          <th>   Options</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model ) {
        <tr>
                <td>
                    @item.product_name

                </td>
            <td>
                 @item.product_price

            </td>
                <td>
                  
                        <img src="@("~/Uploads/product_images/"+@item.product_image) "asp-append-version="true" width="100" height="100" />
                    
                </td>
            <td>
                <a asp-action="UpdateProduct" asp-route-id="@item.product_id" class="btn btn-warning">Update</a> |
                    <a asp-action="ProductDetail" asp-route-id="@item.product_id" class="btn btn-success">Details</a> |
<a asp-action="DeleteProductPermission" asp-route-id="@item.product_id" class=" btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
