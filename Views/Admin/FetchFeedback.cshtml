@{
    ViewData["Title"] = "FetchFeedback";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@model List<Feedback>

<h1 class="text-center mb-4">Feedback List</h1>

<div class="container">
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No feedback entries found.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Feedback ID</th>
                    <th>Customer Name</th>
                    <th>Feedback</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.feedback_id</td>
                        <td>@item.user_name</td>
                        <td>@item.user_message</td>
                        <td>
                            <a href="@Url.Action("ShowFeedback", "Admin", new { id = item.feedback_id })" class="btn btn-info btn-sm">View</a>
                            <a asp-action="DeleteFeedback" asp-route-id="@item.feedback_id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>