@model dotnet_project_ecommerce.ViewModels.KhaltiPaymentReceiptViewModel

@{
    ViewData["Title"] = "Payment Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mt-5">
                <div class="card-header bg-success text-white">
                    <h3 class="card-title">Payment Successful</h3>
                </div>
                <div class="card-body">
                    <h4>Thank you for your purchase, @Model.CustomerName!</h4>
                    <p>Your payment has been successfully processed.</p>

                    <div class="receipt-details mt-4">
                        <h5>Receipt Details</h5>
                        <ul class="list-group">
                            <li class="list-group-item"><strong>Transaction ID:</strong> @Model.TransactionId</li>
                            <li class="list-group-item"><strong>Product Price :</strong> $ @Model.Amount.ToString("N2")</li>
                            <li class="list-group-item"><strong>Service Charge:</strong> $ 5.65</li>
                            <li class="list-group-item"><strong>Total Amount (Including Charges):</strong> $ @Model.TotalAmount.ToString("N2")</li>
                            <li class="list-group-item"><strong>Payment Date:</strong> @Model.PaymentDate.ToString("f")</li>
                            <li class="list-group-item"><strong>Product:</strong> @Model.ProductName</li>
                            <li class="list-group-item"><strong>Customer Email:</strong> @Model.CustomerEmail</li>
                        </ul>
                    </div>

                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Customer")" class="btn btn-primary">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>