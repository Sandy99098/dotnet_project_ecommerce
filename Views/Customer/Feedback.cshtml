@{
    ViewData["Title"] = "feeedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Feedback
            <h1 class="text-center mb-4">Get In Touch With Us</h1>

<div class="container my-5">
    <div class="row justify-content-between">
        <!-- Use justify-content-between to space the columns -->
        <!-- Left Column: Form -->
        <div class="col-md-6 mb-4">
            <!-- Added mb-4 for margin-bottom -->

            <form method="post" asp-action="Feedback" asp-controller="Customer" class="mx-md-3" enctype="multipart/form-data">
                <input asp-for="feedback_id" hidden  class="form-control" />

                <div class="form-group mb-3">
                    <label asp-for="user_name" class="form-label fw-semibold">Full Name</label>
                    <input asp-for="user_name" placeholder="Enter Your Full Name" required class="form-control" />
                    <span asp-validation-for="user_name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="user_message" class="form-label fw-semibold">Feedback</label>
                    <textarea asp-for="user_message" placeholder="Enter Your Feedback" required class="form-control" rows="4"></textarea>
                    <span asp-validation-for="user_message" class="text-danger"></span>
                </div>
                <div class="text-success"><h2>@ViewBag.message </h2></div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-warning me-2">Submit</button>
                    <a asp-action="CustomerProfile" class="btn btn-secondary  w-100 mt-2 ">Cancel</a>
                </div>
            </form>
        </div>

        <!-- Right Column: Map -->
        <div class="col-md-5">
            <div class="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3515.449365189775!2d83.97812817557903!3d28.2240374758903!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3995943f649d200b%3A0x4ee44c3d0bca654e!2sMount%20Annapurna%20Campus!5e0!3m2!1sen!2snp!4v1740881049405!5m2!1sen!2snp"
                        style="border:0; width: 100%; height: 350px;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>