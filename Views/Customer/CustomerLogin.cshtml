@{
    ViewData["Title"] = "CustomerLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container vh-100 d-flex align-items-center justify-content-center">
    <div class="card p-4 shadow-lg" style="width: 100%; max-width: 400px;">
        <h2 class="text-center mb-4" id="form-title">Login</h2>

        <!-- LOGIN FORM -->
        <form id="login-form" method="post" asp-action="Login" asp-controller="Customer">
            <div class="form-group mb-3">
                <input type="email" class="form-control" name="email" placeholder="Email" required />
            </div>
            <div class="form-group mb-3">
                <input type="password" class="form-control" name="password" placeholder="Password" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>

            <p class="mt-3 text-center">Don't have an account? <a href="#" id="show-signup">Sign up</a></p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <hr class="my-3" />

            <div class="d-grid gap-2">
                <a href="https://www.facebook.com/" class="btn btn-outline-primary">
                    <i class='bx bxl-facebook me-2'></i> Login with Facebook
                </a>
                <a href="https://account.google.com/" class="btn btn-outline-danger">
                    <img src="~/Customer/icons8-google-48.png" alt="" style="height: 20px; margin-right: 8px;" />
                    Login with Google
                </a>
            </div>
        </form>

        <!-- SIGNUP FORM -->
        <form id="signup-form" class="d-none mt-4" method="post" asp-action="CustomerRegistration" asp-controller="Customer">
            <div class="form-group mb-3">
                <input type="text" class="form-control" name="fullName" placeholder="Full Name" required />
            </div>
            <div class="form-group mb-3">
                <input type="email" class="form-control" name="email" placeholder="Email" required />
            </div>
            <div class="form-group mb-3">
                <input type="password" class="form-control" name="password" placeholder="Password" required />
            </div>
            <div class="form-group mb-3">
                <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password" required />
            </div>
            <button type="submit" class="btn btn-success w-100">Sign Up</button>

            <p class="mt-3 text-center">Already have an account? <a href="#" id="show-login">Login</a></p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/Customer/script.js"></script>
}
